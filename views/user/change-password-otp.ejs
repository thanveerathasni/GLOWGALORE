<style>
  :root {
      --primary-bg: #fce4ec; /* Light pink background */
      --secondary-bg: #f8bbd0; /* Slightly darker pink */
      --accent-purple: #9b59b6; /* Purple accent */
      --text-primary: #4b4b4b; /* Dark gray text */
      --text-secondary: #7b1fa2; /* Darker purple for secondary text */
      --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
  }

  body {
      background-color: var(--primary-bg);
      font-family: Arial, sans-serif;
      color: var(--text-primary);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
  }

  .container {
      padding: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .login_wrap {
      background-color: var(--secondary-bg);
      border-radius: 10px;
      box-shadow: var(--shadow);
      padding: 50px;
      border: 1px solid var(--accent-purple);
  }

  .otp-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
      border-radius: 10px;
      background-color: var(--primary-bg);
      width: 100%;
      max-width: 500px;
      margin: 0 auto;
      box-shadow: var(--shadow);
  }

  .otp-timer-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 10px;
      width: 100%;
  }

  .otp-timer {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background-color: var(--secondary-bg);
      font-size: 14px;
      color: var(--text-primary);
      text-align: center;
      transition: background-color 0.3s ease;
  }

  .form-group {
      width: 100%;
      text-align: center;
  }

  .form-control {
      width: 100%;
      padding: 10px;
      font-size: 1rem;
      border-radius: 8px;
      border: 1px solid var(--text-secondary);
      transition: all 0.3s ease;
      background-color: var(--primary-bg);
      color: var(--text-primary);
  }

  .form-control:focus {
      border-color: var(--accent-purple);
      box-shadow: 0 0 5px rgba(155, 89, 182, 0.5);
  }

  .btn-primary {
      margin-top: 15px;
      background-color: var(--accent-purple);
      border-color: var(--accent-purple);
      border-radius: 8px;
      color: white;
      padding: 10px;
      font-size: 1rem;
      transition: all 0.3s ease;
  }

  .btn-primary:hover {
      background-color: #7b1fa2; /* Darker purple on hover */
      border-color: #7b1fa2;
  }

  .resend-button {
      margin-top: 10px;
      background-color: transparent;
      color: var(--accent-purple);
      border: none;
      text-decoration: underline;
      cursor: pointer;
      font-size: 0.9rem;
  }

  .resend-button:hover {
      color: #7b1fa2; /* Darker purple on hover */
  }

  .error-message {
      color: #e74c3c;
      font-size: 0.875rem;
      margin-top: 5px;
  }

  .is-invalid {
      border-color: #e74c3c !important;
      box-shadow: 0 0 5px rgba(231, 76, 60, 0.6);
  }

  .alert {
      background-color: #f8d7da;
      color: #721c24;
      border-radius: 5px;
      padding: 15px;
      margin-top: 15px;
  }

  .text-muted {
      color: var(--text-secondary);
      font-size: 0.9rem;
  }

  .text-muted a {
      color: var(--accent-purple);
      text-decoration: none;
  }

  .text-muted a:hover {
      color: #7b1fa2;
  }

  .heading_s1 h3 {
      font-size: 1.5rem;
      color: var(--accent-purple);
      font-weight: bold;
      margin-bottom: 30px;
  }
</style>

<div class="container col-4 login_wrap widget-taber-content p-30 background-white border-radius-5 mt-30">
  <div class="padding_eight_all bg-white">
    
    <div class="otp-container">
        <div class="heading_s1">
            <h3 class="mb-30 text-center">Email Verification</h3>
          </div>
      <form onsubmit="return validateOtpForm()">
        <div class="form-group">
          <label for="otp">Enter OTP:</label>
          <input type="text" id="otp" name="otp" class="form-control" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Verify OTP</button>
        </div>
      </form>
      <div class="form-group otp-timer-wrapper">
        <div class="otp-timer" id="otpTimer"></div>
      </div>
      <div class="form-group">
        <button type="button" class="btn btn-link resend-button" onclick="resendOtp()">Resend OTP</button>
      </div>
      <% if (locals.message && message.length > 0) { %>
        <div class="alert alert-danger mt-3">
          <%= message %>
        </div>
      <% } %>
      <div class="text-muted text-center pt-25">
        Already verified? <a href="/login">Login now</a>
      </div>
    </div>
   
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  let otpTimerInterval;
  let timer = 60;

  function updateTimerColor(percentage) {
    const timerElement = document.getElementById('otpTimer');
    if (percentage > 50) {
      timerElement.style.backgroundColor = '#28a745';
    } else if (percentage > 25) {
      timerElement.style.backgroundColor = '#ffc107';
    } else {
      timerElement.style.backgroundColor = '#dc3545';
    }
  }

  function startOtpTimer() {
    const timerElement = document.getElementById('otpTimer');
    otpTimerInterval = setInterval(function () {
      const minutes = Math.floor(timer / 60);
      const seconds = timer % 60;
      timerElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
      updateTimerColor((timer / 60) * 100);
      if (--timer < 0) {
        clearInterval(otpTimerInterval);
        timerElement.textContent = 'Expired';
        timerElement.style.backgroundColor = 'red';
      }
    }, 1000);
  }

  function initializeOtpTimer() {
    clearInterval(otpTimerInterval);
    timer = 60;
    startOtpTimer();
  }

  function validateOtpForm() {
    const otpInput = document.getElementById('otp').value;
    $.ajax({
      type: 'POST',
      url: '/verify-changepassword-otp',
      data: { otp: otpInput },
      success: function (response) {
        if (response.success) {
          Swal.fire({
            icon: 'success',
            title: 'OTP Verified Successfully',
            showConfirmButton: false,
            timer: 1500
          }).then(() => {
            window.location.href = response.redirectUrl;
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Invalid OTP',
            text: response.message
          });
        }
      },
      error: function () {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Failed to verify OTP. Please try again.'
        });
      }
    });
    return false;
  }

  function resendOtp() {
    clearInterval(otpTimerInterval);
    timer = 60;
    startOtpTimer();
    $.ajax({
      type: 'POST',
      url: '/resend-changepassword-otp',
      success: function (response) {
        if (response.success) {
          Swal.fire({
            icon: 'success',
            title: 'Resend OTP Successful',
            showConfirmButton: false,
            timer: 1500
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to resend OTP. Please try again.'
          });
        }
      },
      error: function () {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Failed to resend OTP. Please try again.'
        });
      }
    });
  }
</script>
