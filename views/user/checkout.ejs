                handleRazorpayPayment(orderData);
            } else if (orderData.paymentMethod === 'wallet') {
                const walletCheck = await checkWalletBalance(totalAmount);
                if (walletCheck.success) {
                    finalizeOrder(orderData);
                } else {
                    Swal.fire('Error', walletCheck.message, 'error');
                }
            } else {
                finalizeOrder(orderData);
            }
        });

       
        const grandTotal = parseFloat(document.querySelector('input[name="grandTotal"]').value);
        const codOption = document.getElementById('cod');
        const codLabel = document.querySelector('label[for="cod"]');

        // Restrict COD if grandTotal exceeds Rs 1000
        if (grandTotal > 1000) {
            codOption.disabled = true; // Disable COD radio button
            codLabel.textContent += " (Unavailable for orders above Rs 1000)"; // Add a note
        }
   
    </script>
