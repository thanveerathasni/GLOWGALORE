<!-- Product Section -->
<section class="bg0 m-t-23 p-b-140" style="padding-top: 80px;">
  <div class="container">
      <div class="flex-w flex-sb-m p-b-52">
          <!-- Filter Form -->
          <form id="filter-form" class="flex-w m-tb-10">
              <select name="sort" aria-label="Sort products">
                  <option value="">Sort By</option>
                  <option value="lowToHigh" <%= sort === "lowToHigh" ? "selected" : "" %>>Price: Low to High</option>
                  <option value="highToLow" <%= sort === "highToLow" ? "selected" : "" %>>Price: High to Low</option>
                  <option value="aToZ" <%= sort === "aToZ" ? "selected" : "" %>>A-Z</option>
                  <option value="zToA" <%= sort === "zToA" ? "selected" : "" %>>Z-A</option>
                  <option value="newArrivals" <%= sort === "newArrivals" ? "selected" : "" %>>New Arrivals</option>
              </select>
              <select name="category" aria-label="Filter by category">
                  <option value="">All Categories</option>
                  <% categories.forEach(cat => { %>
                      <option value="<%= cat._id %>" <%= category === cat._id.toString() ? "selected" : "" %>>
                          <%= cat.name %>
                      </option>
                  <% }); %>
              </select>
              <input type="text" name="search" placeholder="Search Products" value="<%= search || '' %>">
              <input type="number" name="minPrice" placeholder="Min Price" min="0" value="<%= minPrice || '' %>">
              <input type="number" name="maxPrice" placeholder="Max Price" min="0" value="<%= maxPrice || '' %>">
              <button type="submit" class="hov-btn3 trans-04">Apply</button>
              <button type="reset" class="hov-btn3 trans-04" onclick="resetFilters()">Clear</button>
          </form>
      </div>

      <!-- Search Panel -->
      <div class="dis-none panel-search w-full p-t-10 p-b-15">
          <div class="bor8 dis-flex p-l-15">
              <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04" aria-label="Search">
                  <i class="zmdi zmdi-search"></i>
              </button>
              <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search products" aria-label="Search products">
          </div>
      </div>

      <!-- Product Grid -->
      <div class="row isotope-grid">
          <% if (products.length > 0) { %>
              <% products.forEach(product => { %>
                  <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%= product.category ? product.category.name : '' %>">
                      <div class="block2 <%= product.maxOffer > 0 ? 'offer-highlight' : '' %>">
                          <div class="block2-pic hov-img0">
                              <!-- CHANGE: Use maxOffer for offer badge -->
                              <% if (product.maxOffer > 0) { %>
                                  <span class="offer-badge"><%= product.maxOffer %>% Off</span>
                              <% } %>
                              <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>" loading="lazy">
                              <a href="/productDetails?id=<%= product._id %>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                  Quick View
                              </a>
                          </div>
                          <div class="block2-txt flex-w flex-t p-t-14">
                              <div class="block2-txt-child1 flex-col-l">
                                  <a href="/productDetails?id=<%= product._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                      <%= product.productName %>
                                  </a>
                                  <!-- CHANGE: Show regularPrice (struck) and salePrice -->
                                  <span class="stext-105 cl3">
                                      <% if (product) { %>
                                          <del>₹<%= product.regularPrice.toFixed(2) %></del>
                                      <% } %>
                                      ₹<%= product.salePrice.toFixed(2) %>
                                  </span>
                              </div>
                              <div class="block2-txt-child2 flex-r p-t-3">
                                  <button class="btn-addwish-b2 dis-block pos-relative js-addwish-b2" onclick="addToWishlist('<%= product._id %>')" aria-label="Add to wishlist">
                                      <img class="icon-heart1 dis-block trans-04" src="/images/icons/icon-heart-01.png" alt="Add to wishlist">
                                      <img class="icon-heart2 dis-block trans-04 ab-t-l" src="/images/icons/icon-heart-02.png" alt="Added to wishlist">
                                  </button>
                              </div>
                          </div>
                      </div>
                  </div>
              <% }); %>
          <% } else { %>
              <div class="col-12 text-center p-b-35">
                  <p class="stext-107 cl6">No products found.</p>
              </div>
          <% } %>
      </div>

      <!-- Load More -->
      <% if (hasMore) { %>
          <div class="flex-c-m flex-w w-full p-t-45">
              <a href="/shop?sort=<%= sort %>&search=<%= search %>&category=<%= category %>&minPrice=<%= minPrice || '' %>&maxPrice=<%= maxPrice || '' %>&skip=<%= skip + 12 %>" 
                 class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                  Load More
              </a>
          </div>
      <% } %>
  </div>
</section>

<%- include("../../views/partials/user/footer") %>

<!-- JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
// Form submission
document.getElementById('filter-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const formData = new FormData(this);
  const params = new URLSearchParams(formData);
  window.location.href = `/shop?${params.toString()}`;
});

// Reset filters
function resetFilters() {
  window.location.href = '/shop';
}

// Add to wishlist
async function addToWishlist(productId) {
  try {
    const response = await fetch('/wishlist/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId })
    });
    const result = await response.json();
    if (result.status) {
      Swal.fire({
        icon: 'success',
        title: 'Added to Wishlist',
        text: 'Product has been added to your wishlist!',
        confirmButtonColor: '#6739e6'
      });
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: result.message || 'Failed to add to wishlist',
        confirmButtonColor: '#6739e6'
      });
    }
  } catch (error) {
    console.error('Error adding to wishlist:', error);
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: 'An error occurred while adding to wishlist',
      confirmButtonColor: '#6739e6'
    });
  }
}
</script>
