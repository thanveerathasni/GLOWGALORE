    /* Responsive design */
    @media (max-width: 767px) {
        .about-hero {
            padding: 2rem 1rem;
        }
        .about-hero h1 {
            font-size: 1.8rem;
        }
        .about-hero p {
            font-size: 1rem;
        }
        .about-story {
            padding: 1rem;
        }
        .about-story h2 {
            font-size: 1.5rem;
        }
        .about-story p {
            font-size: 0.9rem;
        }
        .about-values {
            padding: 1rem;
        }
        .about-values h2 {
            font-size: 1.5rem;
        }
        .values-list li {
            font-size: 0.9rem;
        }
        .values-list li i {
            font-size: 1.2rem;
        }
        .block2-btn {
            padding: 0.6rem 1.2rem;
            font-size: 0.9rem;
        }
        .cta-section {
            padding: 1rem;
        }
    }
    @media (max-width: 576px) {
        .about-hero {
            padding: 1.5rem 0.8rem;
        }
        .about-hero h1 {
            font-size: 1.5rem;
        }
        .about-hero p {
            font-size: 0.9rem;
        }
        .about-story {
            padding: 0.8rem;
