
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* General Page Background */
    body {
      background: linear-gradient(135deg, #d8a9e3 0%, #d8a9e3 100%);
      font-family: 'Arial', sans-serif;
    }

    .container {
      max-width: 1200px;
    }

    .page-header {
      background: linear-gradient(120deg, #f7e1fa 0%, #e3b0fa 100%);
      padding: 20px 0;
      border-radius: 0 0 15px 15px;
    }

    .breadcrumb {
      display: flex;
      align-items: center;
      font-size: 18px;
      color: #6a4c93;
    }

    .breadcrumb a {
      color: #b22c99;
      text-decoration: none;
      position: relative;
      margin: 0 5px;
      padding-bottom: 5px;
      transition: all 0.3s ease;
    }

    .breadcrumb a:hover {
      color: #f447ee;
    }

    .breadcrumb a::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, #f07bdb, #ff99cc);
      left: 0;
      bottom: 0;
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.3s ease;
    }

    .breadcrumb a:hover::after {
      transform: scaleX(1);
    }

    .dashboard-menu {
      background: linear-gradient(135deg, #dfa9d3 0%, #d3a6d1 100%);
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
      transition: all 0.3s ease;
    }

    .dashboard-menu .nav-link {
      font-weight: 600;
      color: #8f498a;
      padding: 12px 15px;
      border-radius: 8px;
      margin-bottom: 10px;
      background: rgba(255, 255, 255, 0.1);
      box-shadow: 0 4px 10px rgba(123, 131, 112, 0.3), 0 4px 20px rgba(0, 191, 255, 0.2);
      transition: all 0.3s ease;
    }

    .dashboard-menu .nav-link:hover {
      color: #ff66b3;
      background: rgba(255, 255, 255, 0.3);
      transform: translateX(5px);
      box-shadow: 0 4px 15px rgba(173, 255, 47, 0.5), 0 6px 25px rgba(0, 191, 255, 0.4);
    }

    .dashboard-menu .nav-link.active {
      background: #ff66b3;
      color: white;
      box-shadow: 0 4px 15px rgba(0, 191, 255, 0.5);
    }

    .card {
      border-radius: 40px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      background: linear-gradient(135deg, #f8c2d0 0%, #d8a9e3 100%);
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .card-header {
      background: linear-gradient(90deg, #d88ed6 0%, #f1b7db 100%);
      color: white;
      padding: 15px;
      border-radius: 15px 15px 0 0;
      font-weight: 600;
    }

    .btn-success {
      background: linear-gradient(45deg, #a984b8 0%, #d4aadf 100%);
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .btn-success:hover {
      background: linear-gradient(45deg, #ab80b0 0%, #d195c2 100%);
      transform: scale(1.05);
    }

    .btn-primary {
      background: linear-gradient(45deg, #f07bdb 0%, #ff99cc 100%);
      border: none;
      padding: 12px 25px;
      border-radius: 10px;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(45deg, #e66fa3 0%, #f3a8d6 100%);
      transform: scale(1.05);
    }

    .form-group {
      margin-bottom: 15px;
    }

    .required {
      color: red;
    }

    .table {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .table thead th {
      background: #d88ed6;
      color: white;
      padding: 15px;
      font-weight: 600;
    }

    .table tbody tr {
      transition: background 0.3s ease;
    }

    .table tbody tr:hover {
      background: #f8f9fa;
    }

    @media (max-width: 768px) {
      .dashboard-menu {
        padding: 15px;
        margin-bottom: 20px;
      }

      .card {
        margin-bottom: 15px;
      }

      .btn-success, .btn-primary {
        width: 100%;
        margin-bottom: 10px;
      }

      .tab-content {
        padding: 0 10px;
      }
    }

    @media (min-width: 992px) {
      .dashboard-menu {
        position: sticky;
        top: 20px;
      }
    }
  </style>
</head>
<body>

    <div class="page-header breadcrumb-wrap mt-30">
        <div class="container" style="margin-top: 100px;">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>>
                <span><a href="/userProfile" rel="nofollow">Profile</a></span> >
                <span><a href="/userProfile" rel="nofollow">Profile-details</a></span>
