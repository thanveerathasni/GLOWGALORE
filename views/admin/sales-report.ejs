<%- include("../../views/partials/admin/header") %>

<style>
  :root {
    --primary-color: #1e90ff;
    --secondary-color: #2d3436;
    --success-color: #00b894;
    --danger-color: #d63031;
    --info-color: #0984e3;
    --light-gray: #dfe6e9;
    --background-color: #f5f6fa;
    --white: #ffffff;
    --shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
    --transition: all 0.3s ease;
  }
  #reportForm .mt-4.flex.justify-end.space-x-3 button {
    background-color: var(--primary-color, #1e90ff) !important;
  }
  #reportForm .bg-[var(--success-color)] {
    background-color: var(--success-color, #00b894) !important;
  }
  #reportForm .bg-[var(--danger-color)] {
    background-color: var(--danger-color, #d63031) !important;
  }
  .pagination a {
    color: var(--primary-color);
    padding: 8px 12px;
    border: 1px solid var(--light-gray);
    margin: 0 4px;
    border-radius: 4px;
    transition: var(--transition);
  }
  .pagination a:hover {
    background-color: var(--primary-color);
    color: var(--white);
  }
  .pagination a.active {
    background-color: var(--primary-color);
    color: var(--white);
    font-weight: bold;
  }
  .pagination a.disabled {
    color: var(--light-gray);
    cursor: not-allowed;
  }
</style>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Report</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <!-- Report Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-4">Sales Report</h1>
      
      <!-- Date Range Filter -->
      <form id="reportForm" class="bg-white p-6 rounded-lg shadow-md">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Report Type</label>
            <select name="reportType" class="w-full border rounded-md px-3 py-2">
              <option value="daily" <%= salesData.reportType === 'daily' ? 'selected' : '' %>>Daily</option>
              <option value="weekly" <%= salesData.reportType === 'weekly' ? 'selected' : '' %>>Weekly</option>
              <option value="monthly" <%= salesData.reportType === 'monthly' ? 'selected' : '' %>>Monthly</option>
              <option value="custom" <%= salesData.reportType === 'custom' ? 'selected' : '' %>>Custom Range</option>
            </select>
          </div>
          <div class="custom-dates <%= salesData.reportType === 'custom' ? '' : 'hidden' %>">
            <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
            <input type="date" name="startDate" value="<%= salesData.startDate || '' %>" class="w-full border rounded-md px-3 py-2">
          </div>
          <div class="custom-dates <%= salesData.reportType === 'custom' ? '' : 'hidden' %>">
            <label class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
            <input type="date" name="endDate" value="<%= salesData.endDate || '' %>" class="w-full border rounded-md px-3 py-2">
          </div>
        </div>
        <div class="mt-4 flex justify-end space-x-3">
          <button type="submit" class="bg-[var(--primary-color)] text-white px-4 py-2 rounded-md hover:bg-blue-700">
            Generate Report
          </button>
          <button type="button" onclick="downloadReport('excel')" class="bg-[var(--success-color)] text-white px-4 py-2 rounded-md hover:bg-green-700">
            Download Excel
          </button>
          <button type="button" onclick="downloadReport('pdf')" class="bg-[var(--danger-color)] text-white px-4 py-2 rounded-md hover:bg-red-700">
            Download PDF
          </button>
        </div>
      </form>
    </div>

    <!-- Sales Chart -->
    <div class="bg-white p-6 rounded-lg shadow-md mb-8">
      <h3 class="text-lg font-semibold text-gray-700 mb-4">Sales Trend</h3>
      <% if (salesData.chartData && salesData.chartData.length > 0) { %>
        <canvas id="salesChart"></canvas>
      <% } else { %>
        <p class="text-gray-500 text-center">No sales data available for the selected period.</p>
      <% } %>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Total Sales</h3>
        <p class="text-2xl font-bold text-[var(--success-color)]">₹<%= salesData.totalSales.toLocaleString() %></p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Orders</h3>
        <p class="text-2xl font-bold text-[var(--primary-color)]"><%= salesData.orderCount %></p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Discounts</h3>
        <p class="text-2xl font-bold text-[var(--danger-color)]">₹<%= salesData.discounts.toLocaleString() %></p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-gray-700 mb-2">Coupons</h3>
        <p class="text-2xl font-bold text-[var(--info-color)]">₹<%= salesData.coupons.toLocaleString() %></p>
      </div>
    </div>

    <!-- Detailed Sales Table -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <h2 class="text-xl font-semibold text-gray-800 p-6 border-b">Detailed Sales</h2>
      <div class="overflow-x-auto">
        <% if (salesData.sales && salesData.sales.length > 0) { %>
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Discount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Coupon</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% salesData.sales.forEach(sale => { %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= new Date(sale.date).toLocaleDateString() %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= sale.orderId.toString().slice(-12) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  ₹<%= sale.amount.toLocaleString() %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-[var(--danger-color)]">
                  ₹<%= sale.discount.toLocaleString() %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-[var(--info-color)]">
                  ₹<%= sale.coupon.toLocaleString() %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-gray-500 text-center py-6">No sales data available for the selected period.</p>
        <% } %>
      </div>

      <!-- Pagination Controls -->
      <% if (salesData.totalPages > 1) { %>
        <div class="p-6 border-t">
          <div class="flex justify-between items-center">
            <p class="text-sm text-gray-600">
              Showing <%= (salesData.currentPage - 1) * salesData.limit + 1 %>
              to <%= Math.min(salesData.currentPage * salesData.limit, salesData.orderCount) %>
              of <%= salesData.orderCount %> orders
            </p>
            <div class="pagination">
              <a href="#" class="<%= salesData.currentPage === 1 ? 'disabled' : '' %>"
                onclick="goToPage(<%= salesData.currentPage - 1 %>)">Previous</a>
              <% for (let i = 1; i <= salesData.totalPages; i++) { %>
                <a href="#" class="<%= salesData.currentPage === i ? 'active' : '' %>"
                  onclick="goToPage(<%= i %>)"><%= i %></a>
              <% } %>
              <a href="#" class="<%= salesData.currentPage === salesData.totalPages ? 'disabled' : '' %>"
                onclick="goToPage(<%= salesData.currentPage + 1 %>)">Next</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    // Toggle custom date inputs
    document.querySelector('select[name="reportType"]').addEventListener('change', function(e) {
      const customDates = document.querySelectorAll('.custom-dates');
      customDates.forEach(el => {
        el.classList.toggle('hidden', e.target.value !== 'custom');
      });
    });

    // Form submission
    document.getElementById('reportForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const formData = new FormData(e.target);
      const params = new URLSearchParams(formData);
      window.location.href = `/admin/sales/report?${params.toString()}`;
    });

    // Navigate to a specific page
    function goToPage(page) {
      if (page < 1 || page > <%= salesData.totalPages %>) return;
      const formData = new FormData(document.getElementById('reportForm'));
      const params = new URLSearchParams(formData);
      params.set('page', page);
      window.location.href = `/admin/sales/report?${params.toString()}`;
    }

    // Download report
    function downloadReport(format) {
      const formData = new FormData(document.getElementById('reportForm'));
      const params = new URLSearchParams(formData);
      params.append('format', format);
      window.location.href = `/admin/sales/report?${params.toString()}`;
    }

    // Chart.js Sales Trend
    <% if (salesData.chartData && salesData.chartData.length > 0) { %>
      const ctx = document.getElementById('salesChart').getContext('2d');
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: <%- JSON.stringify(salesData.chartData.map(data => data.date)) %>,
          datasets: [{
            label: 'Sales Amount (₹)',
            data: <%- JSON.stringify(salesData.chartData.map(data => data.amount)) %>,
            borderColor: 'var(--primary-color)',
            backgroundColor: 'rgba(30, 144, 255, 0.2)',
            fill: true,
            tension: 0.4
          }]
        },
        options: {
          scales: {
            x: { title: { display: true, text: 'Date' } },
            y: { title: { display: true, text: 'Amount (₹)' }, beginAtZero: true }
          }
        }
      });
    <% } %>
  </script>
<%- include("../../views/partials/admin/footer") %>