<style>
    /* Grey theme variables for consistency */
    :root {
        --grey-bg: #f1f3f5;
        --grey-text: #343a40;
        --grey-hover: #495057;
    }

    /* Table styles (from coupon.ejs, adapted to grey theme) */
    .table {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
    }
    .table th,
    .table td {
        padding: 10px;
        text-align: left;
        vertical-align: middle;
    }
    .table th {
        background-color: var(--grey-hover); /* Replace #007bff with grey */
        color: #fff;
        font-weight: 600;
    }
    .table-striped tbody tr:nth-child(odd) {
        background-color: #f8f9fa;
    }
    .table-responsive {
        overflow-x: auto;
        width: 92%;
        max-width: 100%;
        margin-left: 40px;
    }
    .table.table-striped {
        min-width: 600px;
        font-size: 16px;
    }
    .table .btn {
        width: 80px;
        font-size: 14px;
    }
    /* Button styles to match coupon.ejs badge colors */
    .btn-success {
        background-color: #28a745; /* Match alert-success */
        color: #fff;
        padding: 6px 12px;
        font-size: 0.85rem;
        border: none;
    }
    .btn-success:hover {
        background-color: #218838; /* Darker green */
    }
    .btn-danger {
        background-color: #dc3545; /* Match alert-danger */
        color: #fff;
        padding: 6px 12px;
        font-size: 0.85rem;
        border: none;
    }
    .btn-danger:hover {
        background-color: #c82333; /* Match coupon.ejs btn-danger hover */
    }

    /* Custom pagination style */
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        flex-wrap: wrap;
    }
    .pagination .page-item {
        margin: 0 5px;
        border-radius: 50px;
    }
    .pagination .page-link {
        border-radius: 50px;
        background-color: #f8f9fa;
        color: var(--grey-text);
        padding: 10px 20px;
        font-size: 14px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    .pagination .page-item.active .page-link {
        background-color: var(--grey-hover);
        color: #fff;
        border-color: var(--grey-hover);
    }
    .pagination .page-link:hover {
        background-color: var(--grey-hover);
        color: #fff;
        border-color: var(--grey-hover);
    }
    .pagination .page-item.disabled .page-link {
        background-color: #e9ecef;
        color: #6c757d;
        border-color: #e9ecef;
        pointer-events: none;
    }

    /* Modified container size */
    .container.mt-3 {
        max-width: 500px;
        margin: 0 auto;
        box-shadow: 0 2px 10px rgba(52, 51, 51, 0.1);
        border-radius: 8px;
        padding: 6px;
        background-color: #cdcdcd50;
    }
    .aside-mini .main-wrap {
        margin-left: 100px;
        margin-right: 50px;
        border-radius: 8px;
    }

    /* Search bar responsiveness */
    .input-group {
        width: 100% !important;
        max-width: 500px;
        margin: 0 auto !important;
    }
    .input-group .form-control {
        font-size: 14px;
    }
    .input-group .btn {
        font-size: 14px;
        padding: 8px 16px;
    }

    /* Content header */
    .content-header {
        flex-direction: column;
        align-items: flex-start;
        margin-bottom: 20px;
    }
    .content-header .content-title {
        font-size: 24px;
        color: var(--grey-text);
        margin-bottom: 15px;
    }

    /* Responsive adjustments */
    @media (max-width: 767px) {
        .table {
            font-size: 0.85rem; /* From coupon.ejs */
        }
        .table th,
        .table td {
            padding: 8px; /* From coupon.ejs */
            min-width: 100px;
        }
        .table.table-striped {
            font-size: 14px;
        }
        .table .btn {
            font-size: 12px;
            padding: 6px 12px;
        }
        .input-group {
            max-width: 100%;
        }
        .input-group .form-control {
            font-size: 13px;
        }
        .input-group .btn {
            font-size: 13px;
            padding: 6px 12px;
        }
        .pagination .page-link {
            padding: 8px 16px;
            font-size: 13px;
        }
        .pagination .page-item {
            margin: 0 3px;
        }
        .container.mt-3 {
            padding: 10px;
        }
        .content-header .content-title {
            font-size: 20px;
        }
    }
    @media (max-width: 576px) {
