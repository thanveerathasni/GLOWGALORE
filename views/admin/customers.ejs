<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.css" />

<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Customers</h2>
    </div>
</div>

<header class="card-header text-center mb-20">
    <form action="/admin/users/" method="get" class="d-inline">
        <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
            <input type="text" class="form-control border-0 rounded-pill" placeholder="Search customers..." name="search" value="<%= search %>">
            <button class="btn border-0" type="submit">Search</button>
            <!-- Clear Button -->
            <button type="button" class="btn btn-secondary border-0 rounded-pill" onclick="clearSearch()">Clear</button>
        </div>
    </form>
</header>


<div class="right mt-5">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="clr" color: #1e70c2;">
                <tr>
                    <th scope="col"><b>Name</b></th>
                    <th scope="col"><b>Email</b></th>
                    <th scope="col"><b>Action</b></th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < data.length; i++) { %>
                    <tr>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].email %></td>
                        <td> 
                            <% if (data[i].isBlocked === false) { %>
                                <button class="btn btn-danger" style="width: 80px;" onclick="confirmAction('/admin/blockCustomer?id=<%= data[i]._id %>', 'block')">
                                    Block
                                </button>
                            <% } else { %>
                                <button class="btn btn-success" style="width: 80px;" onclick="confirmAction('/admin/unblockCustomer?id=<%= data[i]._id %>', 'unblock')">
                                    Unblock
                                </button>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<div class="container mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-20">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%=(i === currentPage) ? 'active' : ''%>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                        <%= i %>
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.js"></script>

<script>
    function confirmAction(url, actionType) {
        const isBlock = actionType === 'block';
        Swal.fire({
            title: isBlock ? 'Are you sure you want to block this customer?' : 'Are you sure?',
            text: isBlock ? 'This will restrict the customer\'s access.' : 'You are about to change the status of this customer.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: isBlock ? 'Yes, block customer!' : 'Yes, proceed!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url; // Redirect to the given URL if confirmed
            }
        });
    }

    // Clear search input and reset the form
    function clearSearch() {
        const searchInput = document.querySelector('input[name="search"]');
        searchInput.value = ''; // Clear the input field
        searchInput.form.submit(); // Submit the form to refresh the page with no search query
    }
</script>

