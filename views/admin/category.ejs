            // Toastr error notification
            toastr.error('Failed to remove offer.');
          }
        } catch (error) {
          Swal.fire(
            "Error",
            "An error occured while removing the offer",
            "error"
          );
          // Toastr error notification
          toastr.error('An error occurred while removing the offer.');
          console.error("Error removing offer", error);
        }
      }

