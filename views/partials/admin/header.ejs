:root {
            --grey-bg: #f1f3f5; /* Light grey body background */
            --grey-navbar: #6c757d; /* Medium grey navbar */
            --grey-sidebar: #adb5bd; /* Light grey sidebar */
            --grey-text: #343a40; /* Dark grey text */
            --grey-hover: #495057; /* Darker grey for hover/active */
            --grey-dropdown: #868e96; /* Medium grey dropdown */
            --grey-breadcrumb-bg: #f8f9fa; /* Light grey breadcrumb background */
            --grey-link: #495057; /* Dark grey breadcrumb links */
            --grey-text-secondary: #6c757d; /* Medium grey non-links/separators */
        }
        body {
            background-color: white;
        }
        .navbar {
            background-color: white;
        }
        .navbar-aside {
            background-color: white;
        }
        .menu-item a.menu-link {
            color: var(--grey-text);
            text-decoration: none;
        }
        .menu-item a.menu-link:hover,
        .menu-item a.menu-link.active {
            background-color: rgb(208, 228, 253);
            color: #444242;
        }
        .dropdown-menu {
            background-color: var(--grey-dropdown);
        }
        .dropdown-item:hover {
            background-color: rgb(33, 32, 32);
            color: #ffffff;
        }
        /* Breadcrumb Styles (adapted from order-details.ejs with grey theme) */
        .breadcrumb-wrap {
            margin-top: 30px;
            padding: 1rem 0;
            background: var(--grey-breadcrumb-bg);
            border-bottom: 1px solid var(--grey-link);
        }
        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            font-weight: 400;
        }
        .breadcrumb a {
            color: var(--grey-link);
            text-decoration: none;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            transition: all 0.3s ease;
        }
        .breadcrumb a:hover {
            background: rgba(73, 80, 87, 0.2); /* Grey hover background */
            color: var(--grey-text); /* Darker grey on hover */
        }
        .breadcrumb span {
            color: var(--grey-text-secondary);
        }
        .breadcrumb span:not(:last-child)::after {
            content: '>';
            margin: 0 0.5rem;
            color: var(--grey-link);
        }
        @media (max-width: 767px) {
            .breadcrumb {
                flex-wrap: wrap;
                gap: 0.3rem;
            }
        }
   

